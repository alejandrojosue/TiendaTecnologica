{
  "kind": "singleType",
  "collectionName": "empresas",
  "info": {
    "singularName": "empresa",
    "pluralName": "empresas",
    "displayName": "Empresa"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nombre": {
      "type": "string",
      "required": true,
      "regex": "^[A-Za-zñÑáéíóúÁÉÍÓÚ ]+$",
      "maxLength": 20
    },
    "direccion": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "correo": {
      "type": "email",
      "required": true
    },
    "telefono": {
      "type": "string",
      "required": true,
      "maxLength": 8,
      "regex": "^[0-9]+$",
      "minLength": 8
    },
    "leyenda": {
      "type": "string",
      "default": "- Eslogan de la compañía -",
      "required": false
    },
    "website": {
      "type": "string",
      "regex": "^(https?|ftp)?(:\\/\\/)?[a-zA-Z0-9.-]+\\.[a-zA-Z]{2,}$"
    }
  }
}
